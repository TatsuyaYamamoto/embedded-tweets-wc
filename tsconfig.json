{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,

    // https://preactjs.com/guide/v10/typescript/#typescript-configuration
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    // https://preactjs.com/guide/v10/getting-started#typescript-preactcompat-configuration
    "skipLibCheck": true,

    // https://vitejs.dev/guide/features.html#typescript-compiler-options
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
